<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cskaoyan.mall.marketmanager.dao.RegionDao">
    <resultMap id="regionMap" type="com.cskaoyan.mall.marketmanager.dto.RegionInfo">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="type" column="type"/>
        <result property="code" column="code"/>
        <result property="pid" column="pid"/>
        <collection property="children" column="pid" ofType="com.cskaoyan.mall.marketmanager.dto.RegionInfo" select="findAllRegion">
        </collection>
    </resultMap>
    <select id="findAllRegion" resultMap="regionMap">
      select id,name,type,code,pid from cskaoyan_mall_region
    </select>
</mapper>